				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parentLeft" file="Interface\Common\ShadowOverlay-Left">
							<Size x="30" y="30"/>
							<Anchors>
								<Anchor point="LEFT" x="0" y="0"/>
							</Anchors>
						</Texture>
